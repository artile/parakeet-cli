#!/usr/bin/env bash
set -euo pipefail
SCRIPT_PATH="$(readlink -f "${BASH_SOURCE[0]}")"
ROOT_DIR="$(cd "$(dirname "$SCRIPT_PATH")/.." && pwd)"
export PARAKEET_HOME="$ROOT_DIR"
"$ROOT_DIR/scripts/terms" ingest-auto --config "$ROOT_DIR/terms/sources.json"
"$ROOT_DIR/scripts/terms" build-vocab --max-terms 300 --min-count 2
